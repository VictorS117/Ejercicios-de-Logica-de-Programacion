// conversiÃ³n de longitud (pies a metros) y de peso (kilos a libras) //

Algoritmo Conversion
	Definir Pies, Metros, Kilos, Libras como real;
	Escribir "Ingresa el numero de pies: ";
	Leer Pies;
	Si Pies>=1 Entonces
		metros <- cm/100;
		metros <- pies*0.3048;
		Escribir "Valor en metros: ", metros " m";
	FinSi
	Escribir "Ingresa el numero de Kilos: ";
	Leer Kilos;
	Si Kilos>=1 Entonces
		libras <- Kilos*2.20462
		Escribir "Valor en Libras: ", libras " lbs";
	FinSi
FinAlgoritmo
